
@{
    ViewBag.Title = "Asisste";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<html>
<head>
    <title>Asisste</title>
</head>
<body>
    <div class="container"></div>
    <div id="idContainer" class="modal is-open">
        <div class="modal-container">
            <div class="modal-left">
                <h1 class="modal-title">Bienvenido!</h1>
                <p class="modal-desc"></p>
                <div class="input-block">
                    <label for="email" class="input-label">Correo</label>
                    <input type="email" name="email" id="email" placeholder="Email">
                </div>
                <div class="input-block">
                    <label for="password" class="input-label">Contraseña</label>
                    <input type="password" name="password" id="password" placeholder="Password">
                </div>
                <div class="modal-buttons">
                    <a href="https://localhost:44356/Home/RecuperarContrase%C3%B1a" class="">Olvidaste tu contraseña?</a>
                    <button onclick="IniciarSesion()" class="input-button">Iniciar sesión</button>
                </div>
                <p><a href="#"></a></p>
            </div>
            <div class="modal-right">
                <img src="~/Content/images/Login/IMGLogin.png" alt="">
            </div>

        </div>
    </div>
</body>
</html>

<script src="~/Scripts/Login/Login.js"></script>

